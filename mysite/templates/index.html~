    <script>
       var delBtn = document.getElementsByClassName("delBtn");
       var chaBtn = document.getElementsByClassName("chaBtn");
       var addBtn = document.getElementById("addBtn");
       addBtn.addEventListener("click",function(){
           window.location.href = "/addBook/";
       });
       for(var i=0,len=delBtn.length;i<len;i++){
           delBtn[i].addEventListener("click",function(){
               window.location.href = "/index/"+this.name;
           });
       }
       for(var i=0,len=chaBtn.length;i<len;i++){
          chaBtn[i].addEventListener("click",function(){
              window.location.href="/change/"+this.id;
          });
       }
    </script>
